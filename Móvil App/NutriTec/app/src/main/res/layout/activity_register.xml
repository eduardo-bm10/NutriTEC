<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".RegisterActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp"
            android:background="@drawable/custom_edittext">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registro"
                    android:id="@+id/registerText"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/purple"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etCedula"
                    android:background="@drawable/custom_edittext"
                    android:hint="Cédula"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etNombre"
                    android:background="@drawable/custom_edittext"
                    android:hint="Nombre"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etPrimerApellido"
                    android:background="@drawable/custom_edittext"
                    android:hint="Primer Apellido"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etSegundoApellido"
                    android:background="@drawable/custom_edittext"
                    android:hint="Segundo Apellido"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/etFechaNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Fecha de Nacimiento"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="none"
                    android:focusable="false"
                    android:onClick="showDatePicker" />

                <DatePicker
                    android:id="@+id/datePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/etPeso"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Peso"
                    android:inputType="numberDecimal"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etIMC"
                    android:background="@drawable/custom_edittext"
                    android:hint="IMC"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etCorreo"
                    android:background="@drawable/custom_edittext"
                    android:hint="Correo electrónico"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/etContraseña"
                    android:background="@drawable/custom_edittext"
                    android:hint="Contraseña"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/etAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Dirección"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/etCountry"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="País"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mediciones"
                    android:id="@+id/measurementsText"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal" />

                <EditText
                    android:id="@+id/etMaxCom"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Consumo Máximo"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/etWaist"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Cintura"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/etNeck"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Cuello"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/etHips"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Caderas"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="number"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/etMusclePercentage"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Porcentaje de músculo"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="20dp" />

                <EditText
                    android:id="@+id/etFatPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/custom_edittext"
                    android:hint="Porcentaje de grasa"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="20dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/registerButton"
                    android:text="Registrar"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/purple"
                    app:cornerRadius="20dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
